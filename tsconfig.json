{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "scripthost"],
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest",
      "@dcloudio/types",
      "mini-types",
      "miniprogram-api-typings"
    ]
  },
  "exclude": ["node_modules", "unpackage"]
}
